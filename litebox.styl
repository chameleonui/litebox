

/**
 *
 * Just a super simple Litebox
 * and it's ninja styles ^_^
 *
 */

litebox-background-color ?= #fff

litebox-border-color ?= #fff
litebox-border-width ?= .625em
lidebox-border-radius ?= 2px

litebox-shadow-color ?= #000000
litebox-shadow-opacity ?= .5

litebox-icon-close ?= "data:image/png;base64,"
litebox-icon-left ?= "data:image/png;base64,"
litebox-icon-right ?= "data:image/png;base64,"

litebox()
    .litebox
        display: block
        position: fixed
        top: 0
        left: 0
        right: 0
        bottom: 0
        width: 100%
        min-width: 62.25em
        height: 100%
        margin: 0
        padding: 1em 0
        z-index: 10000
        box-sizing: border-box
        font-size\ 16px

        *
            box-sizing: border-box

        .litebox-shadow
            display: block
            position: absolute
            top: 0
            left: 0
            right: 0
            bottom: 0
            background-color: litebox-shadow-color
            opacity: 0

        .litebox-modal
            display: block
            position: relative
            width: 100%
            max-width: 50em
            height: auto
            margin: 0 auto
            opacity: 0

            .litebox-modal-close
                display: block
                position: absolute
                top: litebox-border-width
                right: litebox-border-width
                width: 2.5em
                height: 2.5em
                text-decoration: none
                outline: 0 none
                border: 0 none
                margin: -1.25em -1.25em 0 0
                cursor: pointer
                border-radius: 50%
                background: url(litebox-icon-close) 50% 50% no-repeat
                background-size: 100% 100%
                z-index: 1000

            .litebox-item
                display: block
                position: relative
                width: auto
                height: auto
                min-height: 3em
                background-color: litebox-background-color
                border: litebox-border-width solid litebox-border-color
                border-radius: lidebox-border-radius
                box-shadow: 0 5px 50px rgba(0,0,0,.3)
                z-index: 1

                &.is-off
                    display: none

                .litebox-item-content
                    display: block
                    overflow: hidden
                    position: relative
                    width: 100%
                    height: 100%
                    background-color: #ffffff

                    img
                        display: block
                        width: 100%
                        max-width: 100%
                        height: auto
                        margin: 0
                        padding: 0

                    a.gallery-controllers
                        display: block
                        position: absolute
                        top: 0
                        bottom: 0
                        border: 0 none
                        outline: 0 none
                        text-decoration: none
                        background-repeat: no-repeat
                        background-size: auto
                        background-color: transparent
                        opacity: 0
                        transition: background-position .15s, opacity .15s

                        &.chevron-left
                            left: 0
                            right: 55%
                            background-image: url(litebox-icon-left)
                            background-position: -5% center

                            &:hover
                                background-position 5% center

                        &.chevron-right
                            left: 55%
                            right: 0
                            background-image: url(litebox-icon-right)
                            background-position: 105% center

                            &:hover
                                background-position 95% center

                        &:hover
                            opacity: 1

                .litebox-item-counter
                    display: block
                    margin: 0
                    padding: 0
                    
                    > ul
                        display: block
                        list-style: none
                        margin: 0 auto
                        padding: litebox-border-width 0 0 0
                        width: auto
                        text-align: center
                        line-height: .5

                        > li
                            display: inline-block
                            margin: 0 .25em
                            padding: 0
                            width: .7em
                            height: .7em
                            list-style: none
                            overflow: hidden
                            text-indent: -9999px
                            border-radius: 50%
                            background: #c8c8c8

                        > li.is-active
                            background: #e63939

                .litebox-item-caption
                    display: block
                    margin: 0
                    padding: 0

                    > .litebox-item-caption-content
                        display: block
                        padding: litebox-border-width 0 0 0
                        margin: 0
        
        &.show-chevrons
            .litebox-modal
                .litebox-item
                    .litebox-item-content
                        a.gallery-controllers
                            opacity: 1

                            &.chevron-left
                                background-position 5% center

                            &.chevron-right
                                background-position 95% center

        &.is-shown
            display: block

            .litebox-shadow
                opacity: litebox-shadow-opacity
                transition: opacity .1s

            .litebox-modal
                opacity: 1
                transition: opacity .3s .2s


        &.is-hidden
            display: block

            .litebox-shadow
                display: block
                opacity: 0
                transition: opacity .2s .3s

            .litebox-modal
                opacity: 0
                transition: opacity .3s



